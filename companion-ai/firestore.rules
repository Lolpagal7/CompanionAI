rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can only access their own chat messages
    match /chats/{chatId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Users can only access their own data collections
    match /userData/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public read-only data (if needed)
    match /public/{document=**} {
      allow read: if true;
      allow write: if false; // Only admins should write public data
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
